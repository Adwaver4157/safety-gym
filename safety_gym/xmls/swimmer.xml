<mujoco>
    <compiler angle="degree" coordinate="local" inertiafromgeom="true" />
    <option collision="predefined" density="4000" integrator="RK4" timestep="0.01" viscosity="0.1" />
    <default>
        <geom condim="6" density="5" rgba="1 0 0 1" size=".05" type="sphere" />
        <joint damping=".001" />
        <motor ctrlrange="-1 1" ctrllimited="true" forcerange="-.02 .02" forcelimited="true" />
        <site size="0.012" type="sphere" />
    </default>
    <worldbody>
        <light cutoff="100" diffuse="1 1 1" dir="-0 0 -1.3" directional="true" exponent="1" pos="0 0 1.3" specular=".1 .1 .1" />
        <geom name="floor" size="5 5 0.1" type="plane" condim="6" />
        <!--  ================= SWIMMER ================= /-->
        <body name="robot" pos="0 0 0.05">
            <site name="robot" pos="0.5 0 0" />
            <camera name="vision" mode="trackcom" pos="0 0.1 .2" xyaxes="1 0 0 0 1 1" />
            <geom density="1000" fromto="0.75 0 0 0.25 0 0" size="0.05" type="capsule" />
            <joint axis="1 0 0" name="slider1" pos="0 0 0" type="slide" />
            <joint axis="0 1 0" name="slider2" pos="0 0 0" type="slide" />
            <joint axis="0 0 1" name="rot" pos="0 0 0" type="hinge" />
            <body name="mid" pos="0.25 0 0">
                <geom density="1000" fromto="0 0 0 -0.5 0 0" size="0.05" type="capsule" />
                <joint axis="0 0 1" limited="true" name="rot2" pos="0 0 0" range="-100 100" type="hinge" />
                <body name="back" pos="-0.5 0 0">
                    <geom density="1000" fromto="0 0 0 -0.5 0 0" size="0.05" type="capsule" />
                    <joint axis="0 0 1" limited="true" name="rot3" pos="0 0 0" range="-100 100" type="hinge" />
                </body>
            </body>
        </body>
    </worldbody>
    <sensor>
        <!--<jointvel joint="left" name="jointvel_left"/>
        <jointvel joint="right" name="jointvel_right"/>-->

        <!-- Used for observation -->
        <accelerometer site="robot" name="accelerometer" />
        <velocimeter site="robot" name="velocimeter" />
        <gyro site="robot" name="gyro" />
        <magnetometer site="robot" name="magnetometer" />

        <!-- Used for intrinsic constraints -->
        <subtreecom body="robot" name="subtreecom" />
        <subtreelinvel body="robot" name="subtreelinvel" />
        <subtreeangmom body="robot" name="subtreeangmom" />
    </sensor>
    <actuator>
        <motor ctrllimited="true" ctrlrange="-1 1" gear="150.0" joint="rot2" />
        <motor ctrllimited="true" ctrlrange="-1 1" gear="150.0" joint="rot3" />
    </actuator>
</mujoco>
